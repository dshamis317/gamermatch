<%= render "nav" %>

<img id="search_img" src="<%= @games[:image_url] %>">
<h3><%= @games[:title] %>
  <form action="/games" method="post">
    <%= token_tag %>
    <input type="hidden" name="game[title]" value="<%= @games[:title] %>">
    <input type="hidden" name="game[description]" value="<%= @games[:description] %>">
    <input type="hidden" name="game[release_date]" value="<%= @games[:release_date] %>">
    <input type="hidden" name="game[image_url]" value="<%= @games[:image_url] %>">
    <input type="hidden" name="game[publisher]" value="<%= @games[:publisher] %>">
    <input type="hidden" name="game[genre]" value="<%= @games[:genre] %>">
    <input type="hidden" name="game[platform]" value="<%= @games[:platform] %>">
    <button type="submit">Save to Collection</button>
  </form></h3>
  <h3><%= @games[:description] %></h3>
  <h3>Release Date: <%= @games[:release_date] %></h3>
  <h3>Publisher: <%= @games[:publisher] %></h3>
  <h3>Developer: <%= @games[:developer] %></h3>
  <h3>Genre: <%= @games[:genre] %></h3>
  <% @games[:platform].each do |p| %>
  <h3><%= p['name'] %></h3>
  <% end %>
