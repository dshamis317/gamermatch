<div class="container">
  <div class="profile_details">
    <h1><%= @user.username %>'s Profile</h1>
    <h3><%= @user.age %> years old from <%= @user.location %></h3>
    <h3>Playing on:</h3>
    <ul>
      <% @platforms.each do |p| %>
      <li><%= p.platform_name %></li>
      <% end %>
    </ul>
    <hr>
    <h3>Video Game Collection:</h3>
  </div>

  <div class="games_container">
    <% @games.each do |game| %>
    <div class="index_games">
      <h3><a href="/users/<%= @user.id %>/games/<%= game.id %>"><%= game.title %></a></h3>
      <h4><%= game.platforms.map(&:platform_name).join(", ") %></h4>
      <img src="<%= game.image_url %>">
    </div>
    <% end %>
  </div>
  <hr>

  <% if current_user.id == @user.id %>
  <a href="/users/<%= @user.id %>/edit"><button>Edit Your Profile</button></a>
  <form action="/users/<%= @user.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <%= token_tag %>
    <button type="submit">Quit Gamer Match</button>
  </form>
  <% else %>
  <% end %>
</div>
