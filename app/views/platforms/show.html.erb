<div class="container">
  <h2>Currently being played on <%= @platform.platform_name %></h2>
  <table class="games_index">
    <% @games.each do |game| %>
    <tr>
      <td><img src="<%= game.image_url %>"></td>
      <td><a href="/games/search/<%= game.gb_id %>"><%= game.title %></a></td>
      <td><a href="/games/playing/<%= game.id %>"><button>Current Players</button></td>
    </tr>
    <% end %>
  </table>
</div>
